<Window
	x:Class="Launcher.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Launcher"
	Cursor="Arrow"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterScreen"
	WindowStyle="None"
	AllowsTransparency="True"
	Opacity="1"
	Icon="Resources/ico.ico"
	SizeToContent="Manual"
	Height="693.5"
	Width="1097.5" xmlns:launcher="clr-namespace:Launcher"
	Background="{x:Null}"
	Loaded="Window_Loaded">
    <Grid
		Name="MainGrid"
		Margin="10,10,8,0"
		RenderTransformOrigin="0.527,0.469"
		Width="1080">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
				Width="900*" />
            <ColumnDefinition
				Width="180*" />
        </Grid.ColumnDefinitions>
        <Panel.Background>
            <ImageBrush
				x:Name="BackgroundImageBrush"
				ImageSource="Resources/background.png" />
        </Panel.Background>
        <Button
			Name="Button"
			Margin="0,17,17,0"
			VerticalAlignment="Top"
			Height="15"
			BorderThickness="0"
			HorizontalAlignment="Right"
			Width="18"
			IsHitTestVisible="True"
			Cursor="Hand"
			RenderTransformOrigin="0.545,1.231"
			Grid.Column="1"
			Opacity="0"
			PreviewMouseLeftButtonUp="button_PreviewMouseLeftButtonUp">
            <Control.Template>
                <ControlTemplate
					TargetType="{x:Type Button}">
                    <StackPanel>
                        <Image
							Name="Close2"
							Source="Resources/close_hover.bmp"
							Stretch="Fill"
							Visibility="Collapsed" />
                        <Image
							Name="Close1"
							Source="Resources/close.bmp"
							Stretch="Fill"
							Visibility="Visible" />
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
                            <Setter
								TargetName="Close2"
								Property="Visibility"
								Value="Visible" />
                            <Setter
								TargetName="Close1"
								Property="Visibility"
								Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Control.Template>
        </Button>
        <ComboBox
			Name="Language"
			Width="106"
			Height="22"
			Margin="690,627,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			IsEditable="True"
			Foreground="#FFFFFFFF"
			Background="#00FFFFFF"
			BorderThickness="0"
			FocusVisualStyle="{x:Null}"
			SelectionChanged="Language_SelectionChanged">
            <ComboBoxItem
				Content="VNE" />
            <ComboBoxItem
				Content="ENG" />
            <FrameworkElement.Resources>
                <ResourceDictionary>
                    <Style
						TargetType="{x:Type TextBox}"
						x:Key="TransparentTextBox">
                        <Setter
							Property="Background"
							Value="#00FFFFFF" />
                        <Setter
							Property="Foreground"
							Value="#FFFFFFFF" />
                        <Setter
							Property="BorderThickness"
							Value="0" />
                        <Setter
							Property="TextBoxBase.CaretBrush"
							Value="#00FFFFFF" />
                        <Setter
							Property="TextBoxBase.IsReadOnly"
							Value="True" />
                        <Setter
							Property="Focusable"
							Value="False" />
                    </Style>
                    <Style
						TargetType="{x:Type ToggleButton}"
						x:Key="TransparentToggleButton">
                        <Setter
							Property="Background"
							Value="#00FFFFFF" />
                        <Setter
							Property="BorderThickness"
							Value="0" />
                        <Setter
							Property="FrameworkElement.OverridesDefaultStyle"
							Value="True" />
                        <Setter
							Property="Focusable"
							Value="False" />
                        <Setter
							Property="Template">
                            <Setter.Value>
                                <ControlTemplate
									TargetType="{x:Type ToggleButton}">
                                    <Grid
										Background="#00FFFFFF">
                                        <Path
											Name="Arrow"
											HorizontalAlignment="Center"
											VerticalAlignment="Center"
											Data="M0,0 L4,4 L8,0"
											Fill="#FFFFFFFF" />
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger
											Property="UIElement.IsMouseOver"
											Value="True">
                                            <Setter
												TargetName="Arrow"
												Property="Fill"
												Value="#FFFFFFFF" />
                                        </Trigger>
                                        <Trigger
											Property="IsPressed"
											Value="True">
                                            <Setter
												TargetName="Arrow"
												Property="Fill"
												Value="#FFFFFFFF" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </FrameworkElement.Resources>
            <Control.Template>
                <ControlTemplate
					TargetType="{x:Type ComboBox}">
                    <Grid>
                        <TextBox
							Name="PART_EditableTextBox"
							Style="{StaticResource TransparentTextBox}"
							Text="{TemplateBinding Text}"
							HorizontalAlignment="Left"
							VerticalAlignment="Center" />
                        <ToggleButton
							Name="ToggleButton"
							Style="{StaticResource TransparentToggleButton}"
							HorizontalAlignment="Right"
							Width="20"
							IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}" />
                        <Popup
							Name="Popup"
							Placement="Bottom"
							IsOpen="{TemplateBinding IsDropDownOpen}"
							AllowsTransparency="True"
							Focusable="False"
							PopupAnimation="Slide">
                            <Border
								Background="#222"
								BorderBrush="#FFFFFFFF"
								BorderThickness="1"
								CornerRadius="4"
								Width="80">
                                <ScrollViewer
									Margin="0"
									SnapsToDevicePixels="True">
                                    <StackPanel
										IsItemsHost="True"
										KeyboardNavigation.DirectionalNavigation="Contained" />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Control.Template>
        </ComboBox>
        <Button
			Name="StartGameBtn"
			HorizontalAlignment="Left"
			Margin="838,592,0,0"
			VerticalAlignment="Top"
			Width="210"
			Height="68"
			Grid.ColumnSpan="2"
			Background="{x:Null}"
			Click="StartGameBtn_Click">
            <Control.Template>
                <ControlTemplate
					TargetType="{x:Type Button}">
                    <StackPanel>
                        <Image
							Name="Close2"
							Source="Resources/gamestart_hover.bmp"
							Stretch="Fill"
							Visibility="Collapsed" />
                        <Image
							Name="Close1"
							Source="Resources/gamestart.bmp"
							Stretch="Fill"
							Visibility="Visible" />
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
                            <Setter
								TargetName="Close2"
								Property="Visibility"
								Value="Visible" />
                            <Setter
								TargetName="Close1"
								Property="Visibility"
								Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Control.Template>
        </Button>
        <Button
			Name="OptionBtn"
			HorizontalAlignment="Left"
			Margin="47,462,0,0"
			VerticalAlignment="Top"
			Width="100"
			Height="40"
			Background="#00FFFFFF"
			FontFamily="Segoe UI Emoji"
			Click="OptionBtn_Click">
            <Control.Template>
                <ControlTemplate
					TargetType="{x:Type Button}">
                    <Border
						Background="#00FFFFFF">
                        <TextBlock
							Name="BtnText"
							Text="Settings"
							FontSize="16"
							FontWeight="Bold"
							Foreground="#FF808080"
							HorizontalAlignment="Center"
							VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
                            <Setter
								TargetName="BtnText"
								Property="Foreground"
								Value="#FFFFFFFF" />
                        </Trigger>
                        <Trigger
							Property="IsPressed"
							Value="True">
                            <Setter
								TargetName="BtnText"
								Property="Foreground"
								Value="#FFFFFFFF" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Control.Template>
        </Button>
        <Button
			Name="MinimazeBtn"
			Margin="0,30,55,0"
			VerticalAlignment="Top"
			Height="2"
			BorderThickness="0"
			HorizontalAlignment="Right"
			Width="17"
			IsHitTestVisible="True"
			Cursor="Hand"
			RenderTransformOrigin="2.656,2.167"
			Grid.Column="1"
			Opacity="0"
			Click="minimaze_btn_Click">
            <Control.Template>
                <ControlTemplate
					TargetType="{x:Type Button}">
                    <StackPanel>
                        <Image
							Name="Close2"
							Source="Resources/minimaze_hover.bmp"
							Stretch="Fill"
							Visibility="Collapsed" />
                        <Image
							Name="Close1"
							Source="Resources/minimaze.bmp"
							Stretch="Fill"
							Visibility="Visible" />
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
                            <Setter
								TargetName="Close2"
								Property="Visibility"
								Value="Visible" />
                            <Setter
								TargetName="Close1"
								Property="Visibility"
								Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Control.Template>
        </Button>
        <Button
			Name="LinkLabel3"
			HorizontalAlignment="Right"
			Margin="0,192,734,462"
			Width="111"
			Height="30"
			Background="#FF3A3939"
			FontFamily="Segoe UI Emoji"
			Click="ForumClick">
            <Control.Template>
                <ControlTemplate
					TargetType="{x:Type Button}">
                    <Border
						Background="#00FFFFFF">
                        <TextBlock
							Name="BtnText"
							Text="Go to website"
							FontSize="14"
							FontWeight="Bold"
							Foreground="#FF808080"
							HorizontalAlignment="Center"
							VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
                            <Setter
								TargetName="BtnText"
								Property="Foreground"
								Value="#FFFFFFFF" />
                        </Trigger>
                        <Trigger
							Property="IsPressed"
							Value="True">
                            <Setter
								TargetName="BtnText"
								Property="Foreground"
								Value="#FFFFFFFF" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Control.Template>
        </Button>
        <Grid Background="Transparent" IsHitTestVisible="False">
            <Image
				Name="Progressbar1"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Margin="263,620,0,0"
				Height="8"
				Width="0"
				Source="Resources/progressbar_1.bmp"
				Stretch="Fill">
                <UIElement.OpacityMask>
                    <ImageBrush
						ImageSource="Resources/progressbar_1.bmp" />
                </UIElement.OpacityMask>
            </Image>
            <TextBlock
				Name="Progress1Text"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Margin="632,615,0,0"
				Foreground="#FF646464"
				FontWeight="Bold"
				Text="0%"
				RenderTransformOrigin="-0.309,0.469" />
            <Image
				Name="Progressbar2"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Margin="263,640,0,0"
				Height="8"
				Width="0"
				Source="Resources/progressbar_2.bmp"
				Stretch="Fill">
                <UIElement.OpacityMask>
                    <ImageBrush
						ImageSource="Resources/progressbar_2.bmp" />
                </UIElement.OpacityMask>
            </Image>
            <TextBlock
				Name="Progress2Text"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Margin="632,635,0,0"
				Foreground="#FF646464"
				FontWeight="Bold"
				Text="0%" />
            <TextBlock
				Name="CurrentFileText"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Margin="263,600,0,0"
				Foreground="#FF878080"
				FontWeight="Bold"
				Text="Launcher started, have a good game." />
        </Grid>
        <Button
			Name="LinkLabel4"
			HorizontalAlignment="Right"
			Margin="0,234,769,420"
			Width="80"
			Height="30"
			Background="#00FFFFFF"
			FontFamily="Segoe UI Emoji"
			Click="FacebookClick">
            <Control.Template>
                <ControlTemplate
					TargetType="{x:Type Button}">
                    <Border
						Background="#00FFFFFF">
                        <TextBlock
							Name="BtnText"
							Text="Register"
							FontSize="14"
							FontWeight="Bold"
							Foreground="#FF808080"
							HorizontalAlignment="Center"
							VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
                            <Setter
								TargetName="BtnText"
								Property="Foreground"
								Value="#FFFFFFFF" />
                        </Trigger>
                        <Trigger
							Property="IsPressed"
							Value="True">
                            <Setter
								TargetName="BtnText"
								Property="Foreground"
								Value="#FFFFFFFF" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Control.Template>
        </Button>
        <Button
			Name="LinkLabel5"
			HorizontalAlignment="Right"
			Margin="0,276,776,378"
			Width="80"
			Height="30"
			Background="#00FFFFFF"
			FontFamily="Segoe UI Emoji"
			Click="DiscordClick">
            <Control.Template>
                <ControlTemplate
					TargetType="{x:Type Button}">
                    <Border
						Background="#00FFFFFF">
                        <TextBlock
							Name="BtnText"
							Text="Server"
							FontSize="14"
							FontWeight="Bold"
							Foreground="#FF808080"
							HorizontalAlignment="Center"
							VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
                            <Setter
								TargetName="BtnText"
								Property="Foreground"
								Value="#FFFFFFFF" />
                        </Trigger>
                        <Trigger
							Property="IsPressed"
							Value="True">
                            <Setter
								TargetName="BtnText"
								Property="Foreground"
								Value="#FFFFFFFF" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Control.Template>
        </Button>
        <Button
			Name="LinkLabel6"
			HorizontalAlignment="Right"
			Margin="0,319,773,335"
			Width="80"
			Height="30"
			Background="#00FFFFFF"
			FontFamily="Segoe UI Emoji"
			Click="DiscordClick">
            <Control.Template>
                <ControlTemplate
					TargetType="{x:Type Button}">
                    <Border
						Background="#00FFFFFF">
                        <TextBlock
							Name="BtnText"
							Text="Donate"
							FontSize="14"
							FontWeight="Bold"
							Foreground="#FF808080"
							HorizontalAlignment="Center"
							VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
                            <Setter
								TargetName="BtnText"
								Property="Foreground"
								Value="#FFFFFFFF" />
                        </Trigger>
                        <Trigger
							Property="IsPressed"
							Value="True">
                            <Setter
								TargetName="BtnText"
								Property="Foreground"
								Value="#FFFFFFFF" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Control.Template>
        </Button>
        <Button
			Name="LinkLabel7"
			HorizontalAlignment="Right"
			Margin="0,361,772,293"
			Width="73"
			Background="#00FFFFFF"
			FontFamily="Segoe UI Emoji"
			RenderTransformOrigin="0.548,1.144"
			Click="DiscordClick">
            <Control.Template>
                <ControlTemplate
					TargetType="{x:Type Button}">
                    <Border
						Background="#00FFFFFF">
                        <TextBlock
							Name="BtnText"
							Text="Rankings"
							FontSize="14"
							FontWeight="Bold"
							Foreground="#FF808080"
							HorizontalAlignment="Center"
							VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
                            <Setter
								TargetName="BtnText"
								Property="Foreground"
								Value="#FFFFFFFF" />
                        </Trigger>
                        <Trigger
							Property="IsPressed"
							Value="True">
                            <Setter
								TargetName="BtnText"
								Property="Foreground"
								Value="#FFFFFFFF" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Control.Template>
        </Button>
        <Button
			Width="Auto"
			Height="Auto"
			Foreground="#FF1F1F1F"
			FontWeight="Bold"
			FontSize="16"
			Cursor="Hand"
			Margin="133,622,687,38"
			BorderThickness="1"
			Click="DiscordButton_Click">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
            <Control.Template>
                <ControlTemplate
					TargetType="{x:Type Button}">
                    <Border
						Background="{TemplateBinding Background}"
						BorderBrush="{TemplateBinding BorderBrush}"
						BorderThickness="{TemplateBinding BorderThickness}"
						CornerRadius="4">
                        <ContentPresenter
							HorizontalAlignment="Center"
							VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Control.Template>
            <StackPanel
				Orientation="Horizontal"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
                <TextBlock
					VerticalAlignment="Center" Text="JOIN US TODAY!" FontSize="10" Foreground="#FF242845" />
            </StackPanel>
        </Button>
    </Grid>
</Window>
