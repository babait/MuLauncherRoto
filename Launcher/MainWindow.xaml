<Window
    x:Class="Launcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Launcher"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    AllowsTransparency="True"
    Opacity="1"
    Icon="Resources/ico.ico"
    SizeToContent="Manual"
    Height="693.5"
    Width="1097.5"
    Background="{x:Null}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#191C25" VerticalAlignment="Stretch">
            <!-- Logo -->
            <Image Source="Resources/logo.png" Height="100" Margin="0,30,0,20" HorizontalAlignment="Center"/>
            
            <!-- Menu -->
            <StackPanel Margin="0,0,0,20">
                <Button Content="Website" Margin="10,0" Click="Website_Click" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Register" Margin="10,5" Click="Register_Click" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Repair" Margin="10,5" Click="Repair_Click" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Settings" Margin="10,5" Click="Settings_Click" Style="{StaticResource MenuButtonStyle}"/>
            </StackPanel>
            
            <!-- Discord Widget -->
            <Border Margin="10,10,10,0" Height="250" Background="#23272a" CornerRadius="8">
                <WebBrowser x:Name="DiscordBrowser" Source="https://discord.com/widget?id=1407071806665523314&theme=dark" />
            </Border>
        </StackPanel>

        <!-- Main launcher area -->
        <Grid Grid.Column="1">
            <!-- Background -->
            <Image Source="Resources/background.png" Stretch="Fill"/>
            
            <!-- Status & Progress -->
            <StackPanel VerticalAlignment="Bottom" Margin="50,0,250,70">
                <TextBlock Name="CurrentFileText" Text="Launcher ready." Foreground="#fff" FontWeight="Bold" Margin="0,0,0,10" FontSize="14"/>
                <ProgressBar Name="ProgressBar1" Height="10" Margin="0,0,0,10" Minimum="0" Maximum="100" Value="0"/>
                <TextBlock Name="Progress1Text" Text="0%" Foreground="#fff" FontWeight="Bold"/>
                <ProgressBar Name="ProgressBar2" Height="10" Margin="0,10,0,10" Minimum="0" Maximum="100" Value="0"/>
                <TextBlock Name="Progress2Text" Text="0%" Foreground="#fff" FontWeight="Bold"/>
            </StackPanel>

            <!-- Start button -->
            <Button Content="START" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,65,50"
                    Width="160" Height="50" Click="StartGameBtn_Click"
                    Background="#FFCB8A2A" Foreground="White" FontWeight="Bold"
                    FontSize="20" BorderThickness="0"
                    CornerRadius="24"/>
        </Grid>
    </Grid>

    <!-- Button style for left menu -->
    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#23272a"/>
            <Setter Property="Foreground" Value="#FFD69D20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Margin" Value="0,7,0,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderBrush" Value="#FFD69D20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFD69D20"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
