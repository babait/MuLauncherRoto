	Cursor="Arrow"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterScreen"
	WindowStyle="None"
	AllowsTransparency="True"
	Title="Window1"
	Height="552"
	Width="402.667"
	Icon="Resources/ico.ico" xmlns:launcher="clr-namespace:Launcher"
	Background="{x:Null}">
	<Grid
		Width="400"
		Height="550"
		Loaded="Grid_Loaded">
		<Panel.Background>
			<ImageBrush
				ImageSource="Resources/settings_bg.bmp" />
		</Panel.Background>
		<Button
			Name="Close"
			HorizontalAlignment="Left"
			Margin="176,500,0,0"
			VerticalAlignment="Top"
			Width="108"
			Height="40"
			BorderThickness="0"
			RenderTransformOrigin="-0.775,8.675"
			Background="{x:Null}"
			PreviewMouseLeftButtonUp="Close_PreviewMouseLeftButtonUp">
			<Control.Template>
				<ControlTemplate
					TargetType="{x:Type Button}">
					<StackPanel>
						<Image
							Name="Close2"
							Source="Resources/Cancel.bmp"
							Stretch="Fill"
							Visibility="Collapsed" />
						<Image
							Name="Close1"
							Source="Resources/Cancel.bmp"
							Stretch="Fill"
							Visibility="Visible" />
					</StackPanel>
					<ControlTemplate.Triggers>
						<Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
							<Setter
								TargetName="Close2"
								Property="Visibility"
								Value="Visible" />
							<Setter
								TargetName="Close1"
								Property="Visibility"
								Value="Collapsed" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Control.Template>
		</Button>
		<CheckBox
			Name="Music"
			Width="16"
			Height="16"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Margin="0,304,104,0"
			BorderThickness="0"
			Background="#00FFFFFF">
			<Control.Template>
				<ControlTemplate
					TargetType="{x:Type CheckBox}">
					<Grid>
						<Border
							Name="Border"
							CornerRadius="2"
							Background="#00FFFFFF"
							BorderBrush="#FFFFFFFF"
							BorderThickness="1" />
						<Viewbox
							HorizontalAlignment="Center"
							VerticalAlignment="Center">
							<Path
								Name="CheckMark"
								Data="M0,5 L2,7 L7,0"
								Stroke="#FFFFFFFF"
								StrokeThickness="2"
								Visibility="Collapsed" />
						</Viewbox>
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger
							Property="ToggleButton.IsChecked"
							Value="True">
							<Setter
								TargetName="CheckMark"
								Property="Visibility"
								Value="Visible" />
						</Trigger>
						<Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
							<Setter
								TargetName="Border"
								Property="BorderBrush"
								Value="#FFD3D3D3" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Control.Template>
		</CheckBox>
		<CheckBox
			Name="WinMode"
			Width="16"
			Height="15"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="178,196,0,0"
			BorderThickness="0">
			<Control.Template>
				<ControlTemplate
					TargetType="{x:Type CheckBox}">
					<Grid>
						<Border
							Name="Border"
							CornerRadius="2"
							Background="#00FFFFFF"
							BorderBrush="#FFFFFFFF"
							BorderThickness="1" />
						<Viewbox
							HorizontalAlignment="Center"
							VerticalAlignment="Center">
							<Path
								Name="CheckMark"
								Data="M0,5 L2,7 L7,0"
								Stroke="#FFFFFFFF"
								StrokeThickness="2"
								Visibility="Collapsed" />
						</Viewbox>
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger
							Property="ToggleButton.IsChecked"
							Value="True">
							<Setter
								TargetName="CheckMark"
								Property="Visibility"
								Value="Visible" />
						</Trigger>
						<Trigger
							Property="UIElement.IsMouseOver"
